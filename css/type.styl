// FONTS

@font-face {
    font-family: 'Figgins Sans';
    src: url('fonts/figginssans/FigginsSans-Bold_gdi.woff') format('woff');
    font-weight: bold;
    font-style: normal;
}

@font-face {
    font-family: 'Figgins Sans';
    src: url('fonts/figginssans/FigginsSans-Regular_gdi.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}


@font-face {
    font-family: 'Scotch Modern';
    src: url('fonts/scotchmodern/Scotch Modern.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Scotch Modern';
    src: url('fonts/scotchmodern/Scotch Modern Italic.woff') format('woff');
    font-weight: normal;
    font-style: italic;
}


@font-face {
    font-family: 'Scotch Micro';
    src: url('fonts/scotchmodern/Scotch Micro.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

$font-sans = font-stack('Figgins Sans');
$font-serif = font-stack('Scotch Modern');

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
// @import 'fonts/icons/materialize-min'

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// TYPOGRAPHY

html
  font-family: $font-serif
  letter-spacing: $font-tracking-basic

body
  line-height: 1.5

h1
  margin: 0

p
  margin-bottom: 1rem

// FONT RULES

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif

.font-italic, em, i
  font-style: italic

.font-bold, strong, b
  font-weight: bold

.font-small-caps
  text-transform: uppercase
  font-size: .85em

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

.font-underline
  text-decoration: underline

// CUSTOM STYLES

.font-style-shadow
  text-shadow: rgba(0, 0, 0, .6) 0px 1px 2px

font-style-micro()
  font-family: font-stack('Scotch Micro')
  text-transform: uppercase
  letter-spacing: 1px

.font-style-micro
  font-style-micro()

// TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

// LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

p
  a
    text-decoration: underline

font-sizes($size-basic = 16px, $modulator = 1)

  html
    font-size: $size-basic

  .font-size-small
    font-size: $size-basic * .6875

  .gfield
    .instruction, #extensions_message, .validation_message
      font-size: $size-basic * .6875

  h1, .font-size-h1
    font-size: $size-basic * (2.875 * $modulator)
    line-height: 1.2

  h2, .font-size-h2
    font-size: $size-basic * (2 * $modulator)
    line-height: 1.1875

  h3, .font-size-h3
    font-size: $size-basic * (1.5 * $modulator)
    line-height: 1.166666667

  .font-size-big-number
    font-size: $size-basic * (5.625 * $modulator)
    line-height: .866666667