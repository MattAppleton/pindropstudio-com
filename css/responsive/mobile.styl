// HEADER

#header
  padding-top: $margin-small
  padding-bottom: $margin-small

#menu-item-logo
  svg
    width: 100px
    height: 100px

#menu
  padding-top: $margin-tiny
  text-align: left
  li
    margin-right: $margin-small
    &:last-child
      margin-right: 0
  a:hover, a.active
    border-bottom: 1px solid $color-black
    padding-bottom: 3px

#menu-item-lock
  svg
    width: 11px
    height: 17px
    margin-top: -3px
    vertical-align: middle

// ******************************************************

// FOOTER

#footer
  padding-top: $margin-small
  padding-bottom: $margin-basic

#footer-pin-holder
  padding-top: $margin-large
  padding-bottom: $margin-large
  svg
    height: 130px

.footer-menu
  margin-bottom: $margin-basic
  li
    margin: 0 $margin-tiny

#footer-social-menu
  margin-bottom: $margin-mid
  a
    border()
    padding: $margin-tiny
    &:hover
      background-color: $color-gray

// ******************************************************
